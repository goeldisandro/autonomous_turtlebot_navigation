<robot name="ba_roboter">
  <material name="orange">
    <color rgba="1.0 0.5 0.2 1" />
  </material>

  <link name="map">
    <visual>
      <origin xyz="0.0 0.0 0.0" />
      <geometry>
        <box size="0.5 0.5 0.5" />
      </geometry>
      <material name="blue" />
    </visual>
  </link>

  <link name="velodyne">
    <visual>
      <origin xyz="0.0 0.0 0.0" />
      <geometry>
        <box size="0.1 0.1 0.1" />
      </geometry>
      <material name="orange" />
    </visual>
  </link>
  <link name="imu_link">
    <visual>
      <origin xyz="0.0 0.0 0.0" />
      <geometry>
        <box size="0.1 0.1 0.1" />
      </geometry>
      <material name="orange" />
    </visual>
  </link>

  <link name="odom">
    <visual>
      <origin xyz="0.0 0.0 0.0" />
      <geometry>
        <box size="0.5 0.5 0.5" />
      </geometry>
      <material name="blue" />
    </visual>
  </link>

  <link name="base_footprint">
    <visual>
      <origin xyz="0.0 0.0 0.0" />
      <geometry>
        <box size="1 1 1" />
      </geometry>
      <material name="red" />
    </visual>
  </link>



  <joint name="base_joint" type="fixed">
    <parent link="odom" />
    <child link="base_footprint" />
    <origin rpy="0 0 3.141" xyz="0 0 0.1" />
  </joint>

  <joint name="velodyne_joint" type="fixed">
    <parent link="base_footprint" />
    <child link="velodyne" />
    <origin rpy="0 0 4.2" xyz="0 0 0.2" />
  </joint>
  <joint name="imu_joint" type="fixed">
    <parent link="base_footprint" />
    <child link="imu_link" />
    <origin xyz="0 0 0" /> 
  </joint>

  <joint name="odom_joint" type="floating">
    <parent link="map" />
    <child link="odom" />
    <origin xyz="0 0 0" />
  </joint>

</robot>
